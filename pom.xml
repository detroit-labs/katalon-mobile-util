<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.detroitlabs</groupId>
	<artifactId>katalonsupport</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>katalonsupport</name>
	<url>http://detroitlabs.com</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- Change this to point to your project's /Drivers directory -->
		<project.target.katalon.directory>/Users/chris/Katalon Studio/MobileTestingSample/Drivers</project.target.katalon.directory>
	</properties>

	<build>
		<plugins>
			<!-- `mvn install` will copy the built jar to your Katalon project -->
	        <plugin>
	            <artifactId>maven-antrun-plugin</artifactId>
	            <version>1.8</version>
	            <executions>
	                <execution>
	                    <id>copy</id>
	                    <phase>install</phase>
	                    <configuration>
	                        <target>
	                            <echo>ANT TASK - copying output files....</echo>
	                            <copy todir="${project.target.katalon.directory}" overwrite="true" flatten="true">
	                                <fileset dir="${project.build.directory}" includes="*.jar" />
	                            </copy>
	                        </target>
	                    </configuration>
	                    <goals>
	                        <goal>run</goal>
	                    </goals>
	                </execution>
	            </executions>
	        </plugin>			
		</plugins>
	</build>


	<!-- Used to link in the Katalon libraries as if they were an .m2 repo -->
	<repositories>
		<repository>
			<id>my-local-repo</id>
			<url>file://${basedir}/lib</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.kms.katalon</groupId>
			<artifactId>core</artifactId>
			<version>1.0.0.201804270757</version>
		</dependency>
		<dependency>
			<groupId>com.kms.katalon.core</groupId>
			<artifactId>mobile</artifactId>
			<version>1.0.0.201804270757</version>
		</dependency>
	</dependencies>
	<organization>
		<name>Detroit Labs</name>
		<url>http://detroitlabs.com</url>
	</organization>
</project>
